{
  "name": "mod-switcher",
  "private": true,
  "version": "1.1.2",
  "author": "idkncc",
  "main": "dist/electron/electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "npm run vite:build && tsc && export CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder",
    "app:preview": "npm run vite:build && tsc && electron .",

    "build": "npm run vite:build && tsc"
  },
  "build": {
    "appId": "com.idkncc.mod-switcher",
    "productName": "Mod Switcher",
    "copyright": "Copyright Â© 2023 ${author}",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "public"
    ],
    "mac": {
      "icon": "./public/icons/mac.icns",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./public/icons/512x512.png",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@idkncc/frekui": "^1.0.0-b.5",
    "electron-settings": "^4.0.2",
    "sass": "^1.62.1",
    "toml": "^3.0.0",
    "unzipit": "^1.4.3",
    "uuid": "^9.0.0",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.2.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "electron": "^24.2.0",
    "electron-builder": "^23.1.0",
    "pinia": "^2.0.18",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vue-router": "^4.1.3",
    "vue-tsc": "^1.6.4"
  }
}
